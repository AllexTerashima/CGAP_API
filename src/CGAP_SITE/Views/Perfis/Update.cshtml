@model CGAP_SITE.Models.Perfil

@{
    ViewData["Title"] = "Cadastrar Perfil";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Update">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="PerfilID" />
        <div class="form-group">
            <label asp-for="Nome" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Auditorar" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <div class="checkbox">
                    <input asp-for="Auditorar" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Emitir" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <div class="checkbox">
                    <input asp-for="Emitir" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Receber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <div class="checkbox">
                    <input asp-for="Receber" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" value="Editar" class="btn btn-default">
                    <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Editar
                </button>
            </div>
        </div>
    </div>
</form>

<div>
    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
    <a asp-action="Index">Voltar à Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
