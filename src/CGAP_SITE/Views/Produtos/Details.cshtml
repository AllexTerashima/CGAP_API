@model CGAP_SITE.Models.Produto
@{
    ViewData["Title"] = "Detalhes - Produto";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>@ViewData["Message1"] - @ViewData["Message2"]</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Marca)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Marca)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Tag)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Tag)
        </dd>
        <dt>
            @Html.DisplayName("Sala")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Sala.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Valor)
        </dd>
    </dl>

    <div class="form-actions no-color">
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
        <a asp-action="Index">Voltar à Lista</a> |
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        <a asp-action="Update" asp-route-id="@ViewData["Message3"]"> Editar </a> |
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        <a asp-action="Delete" asp-route-id="@ViewData["Message3"]"> Excluir </a>
    </div>
</div>