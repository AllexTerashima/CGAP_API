@model CGAP_SITE.Models.Usuario
@{
    ViewData["Title"] = "Detalhes - Usuário";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>@ViewData["Message"]</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt>
            @Html.DisplayName("E-mail")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Nascimento)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nascimento)
        </dd>
        <dt>
            @Html.DisplayName("RG")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Rg)
        </dd>
        <dt>
            @Html.DisplayName("CPF")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cpf)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt>
            @Html.DisplayName("Perfil")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Perfil.Nome)
        </dd>
        <dt>
            @Html.DisplayName("Departamento")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Departamento.Nome)
        </dd>
    </dl>

    <div class="form-actions no-color">
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
        <a asp-action="Index">Voltar à Lista</a> |
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        <a asp-action="Update" asp-route-id="@ViewData["Message2"]"> Editar </a> |
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        <a asp-action="Delete" asp-route-id="@ViewData["Message2"]"> Excluir </a>
    </div>
</div>