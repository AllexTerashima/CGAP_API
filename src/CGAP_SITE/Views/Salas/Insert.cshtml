@model CGAP_SITE.Models.Sala

@{
    ViewData["Title"] = "Cadastrar Sala";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Insert">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nome" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Tag" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Tag" class="form-control" />
                <span asp-validation-for="Tag" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Departamento" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="DepartamentoID" class="form-control" asp-items="ViewBag.DepartamentoID">
                    <option value="">-- Selecione o Departamento --</option>
                </select>
                <span asp-validation-for="DepartamentoID" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" value="Cadastrar" class="btn btn-default">
                    <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Cadastrar
                </button>
            </div>
        </div>
    </div>
</form>

<div>
    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
    <a asp-action="Index">Voltar à Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
